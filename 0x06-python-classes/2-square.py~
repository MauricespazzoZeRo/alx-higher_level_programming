#!/usr/bin/python3


class Square:
    """Represents a square."""

    # A private class attribute for the size of the square.
    __size = 0

    def __init__(self, __size=0):
        """Initializes the data."""
        self.__size = __size

        if type(__size) != int:
            raise TypeError("size must be an integer")

        if __size < 0:
            raise ValueError("size must be >= 0")
